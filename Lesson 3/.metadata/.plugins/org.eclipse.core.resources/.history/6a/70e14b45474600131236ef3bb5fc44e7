package controller;

import model.DataSet;
import views.MainForm;

public class DeleteSelectedDataPointController {

DataSet data;
	
	public DeleteDataPointController(DataSet ds){
		data = ds;
	}
	
	public boolean act(MainForm mainForm){
		
		String newX=mainForm.getXToAdd().getText();
		String newY=mainForm.getYToAdd().getText();
		mainForm.getXToAdd().setText("");
		mainForm.getYToAdd().setText("");
		return data.addDataPoint(Double.parseDouble(newX),Double.parseDouble(newY));
	}
	
}
